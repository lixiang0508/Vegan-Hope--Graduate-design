<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlx.gradthesis.demo.Mapper.CategoryMapper">

    <select id="getAllCategories" resultType="com.zlx.gradthesis.demo.bean.Category">
        select * from  Category
    </select>
    <select id="selectCatById" resultType="com.zlx.gradthesis.demo.bean.Category">
        select * from Category where id=#{id}
    </select>
</mapper>